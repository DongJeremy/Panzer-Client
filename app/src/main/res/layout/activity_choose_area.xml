<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />
    </androidx.appcompat.widget.Toolbar>

    <View style="@style/View.Line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Horizontal"
        android:layout_height="40dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/provinceTextView"
            style="@style/TextView.Normal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="省份" />

        <View style="@style/View.Horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cityTextView"
            style="@style/TextView.Normal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="城市" />

        <View style="@style/View.Horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/areaTextView"
            style="@style/TextView.Normal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="地区" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/View.Line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Horizontal"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/provinceRecyclerView"
            style="@style/Layout.Main"
            android:layout_weight="1" />

        <View style="@style/View.Horizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cityRecyclerView"
            style="@style/Layout.Main"
            android:layout_weight="1" />

        <View style="@style/View.Horizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/areaRecyclerView"
            style="@style/Layout.Main"
            android:layout_weight="1" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>