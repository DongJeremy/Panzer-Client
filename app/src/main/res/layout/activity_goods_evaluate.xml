<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />
    </androidx.appcompat.widget.Toolbar>

    <View style="@style/View.Line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Horizontal"
        android:background="@color/white"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/allTextView"
            style="@style/TextView.ChooseType"
            android:layout_weight="1"
            android:background="@drawable/border_evaluate_press"
            android:gravity="center"
            android:text="全部" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/goodTextView"
            style="@style/TextView.ChooseType"
            android:layout_weight="1"
            android:background="@drawable/border_evaluate"
            android:gravity="center"
            android:text="好评"
            android:textColor="@color/greyAdd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inTextView"
            style="@style/TextView.ChooseType"
            android:layout_weight="1"
            android:background="@drawable/border_evaluate"
            android:gravity="center"
            android:text="中评"
            android:textColor="@color/greyAdd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/badTextView"
            style="@style/TextView.ChooseType"
            android:layout_weight="1"
            android:background="@drawable/border_evaluate"
            android:gravity="center"
            android:text="差评"
            android:textColor="@color/greyAdd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/imageTextView"
            style="@style/TextView.ChooseType"
            android:layout_weight="1"
            android:background="@drawable/border_evaluate"
            android:gravity="center"
            android:text="带图"
            android:textColor="@color/greyAdd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/additionTextView"
            style="@style/TextView.ChooseType"
            android:background="@drawable/border_evaluate"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="追价"
            android:textColor="@color/greyAdd" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/View.Line" />
    <org.cloud.core.widget.PullRefreshView
        android:id="@+id/mainPullRefreshView"
        style="@style/Layout.Main" />
</androidx.appcompat.widget.LinearLayoutCompat>