<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />
    </androidx.appcompat.widget.Toolbar>

    <View style="@style/View.Line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/typeLinearLayout"
        style="@style/Layout.Horizontal"
        android:layout_height="48dp">

        <org.cloud.panzer.view.CenterTextView
            android:id="@+id/normalTextView"
            style="@style/TextView.Normal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_color_white"
            android:drawableStart="@mipmap/ic_register_normal"
            android:text="普通注册"
            android:drawableLeft="@mipmap/ic_register_normal" />

        <org.cloud.panzer.view.CenterTextView
            android:id="@+id/mobileTextView"
            style="@style/TextView.Normal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_color_white"
            android:drawableStart="@mipmap/ic_register_mobile"
            android:text="手机注册"
            android:drawableLeft="@mipmap/ic_register_mobile" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Main"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/normalLinearLayout"
            style="@style/Layout.Main"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="登录用户"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/usernameEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/usernameDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="设置密码"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/passwordEditText"
                    style="@style/EditText.Password"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/passwordDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="确认密码"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/confirmEditText"
                    style="@style/EditText.Password"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/confirmDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="电子邮箱"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/emailEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1"
                    android:hint="请输入邮箱地址" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/emailDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/normalCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/normalProtocolTextView"
                    style="@style/TextView.Title"
                    android:text="已阅读并同意《用户注册协议》"
                    android:textSize="14sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/registerTextView"
                style="@style/TextView.Button"
                android:text="注册账号" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mobileLinearLayout"
            style="@style/Layout.Main"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="手机号码"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mobileEditText"
                    style="@style/EditText.Mobile"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mobileDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="验证的码"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/captchaEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1"
                    android:hint="请输入验证码" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/captchaDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/captchaImageView"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="短信验证"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/codeEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1"
                    android:hint="请输入短信验证码" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/codeDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/getTextView"
                    style="@style/TextView.Title"
                    android:text="获取验证码"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="设置密码"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/passwordSmsEditText"
                    style="@style/EditText.Password"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/passwordSmsDelImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:layout_marginTop="1px"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/mobileCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mobileProtocolTextView"
                    style="@style/TextView.Title"
                    android:text="已阅读并同意《用户注册协议》"
                    android:textSize="14sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/completeTextView"
                style="@style/TextView.Button"
                android:text="完成注册" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>