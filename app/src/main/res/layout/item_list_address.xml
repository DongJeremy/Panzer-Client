<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Wrap">

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        style="@style/Layout.Item">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTextView"
            style="@style/TextView.Max"
            android:text="刘龙锦"
            android:textColor="@color/blackSub" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mobileTextView"
            style="@style/TextView.Normal"
            android:layout_alignTop="@+id/nameTextView"
            android:layout_alignBottom="@+id/nameTextView"
            android:layout_toEndOf="@+id/nameTextView"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="10086"
            android:layout_toRightOf="@+id/nameTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/areaTextView"
            style="@style/TextView.Normal"
            android:layout_below="@+id/nameTextView"
            android:layout_marginTop="4dp"
            android:text="10086" />

        <View
            android:id="@+id/lineView"
            style="@style/View.Line"
            android:layout_below="@+id/areaTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/defaultTextView"
            style="@style/TextView.Normal"
            android:layout_below="@+id/lineView"
            android:layout_alignTop="@+id/deleteTextView"
            android:layout_alignBottom="@+id/deleteTextView"
            android:gravity="center"
            android:text="默认地址"
            android:textColor="@color/primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editTextView"
            style="@style/TextView.Normal"
            android:layout_below="@+id/lineView"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/deleteTextView"
            android:drawableStart="@drawable/ic_edit_item"
            android:drawablePadding="0dp"
            android:text="编辑"
            android:layout_toLeftOf="@+id/deleteTextView"
            android:layout_marginRight="4dp"
            android:drawableLeft="@drawable/ic_edit_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/deleteTextView"
            style="@style/TextView.Normal"
            android:layout_below="@+id/lineView"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_delete_item"
            android:drawablePadding="0dp"
            android:text="删除"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_delete_item" />
    </RelativeLayout>

    <View
        style="@style/View.Line"
        android:layout_height="8dp" />
</androidx.appcompat.widget.LinearLayoutCompat>