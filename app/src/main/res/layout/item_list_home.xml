<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Wrap">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/headerLinearLayout"
        style="@style/Layout.Wrap"
        android:visibility="visible">

        <com.youth.banner.Banner
            android:id="@+id/mainBanner"
            style="@style/Layout.Wrap"
            android:layout_height="172dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/navLinearLayout"
            style="@style/Layout.Wrap"
            android:visibility="visible">

            <View
                style="@style/View.Line"
                android:layout_height="2dp"
                android:background="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainNavRecyclerView"
                style="@style/Layout.Wrap"
                android:layout_marginTop="1px"
                android:layout_marginBottom="1px"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />


            <View
                style="@style/View.Line"
                android:layout_height="2dp"
                android:background="@color/white" />

            <View style="@style/View.Line" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/noticeLinearLayout"
        style="@style/Layout.Horizontal"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/noticeImageView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@mipmap/ic_home_new_notice" />

        <View
            style="@style/View.Horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@mipmap/ic_home_notice" />

        <com.sunfusheng.marqueeview.MarqueeView
            android:id="@+id/noticeMarqueeView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:mvAnimDuration="1000"
            app:mvDirection="bottom_to_top"
            app:mvGravity="left"
            app:mvInterval="3000"
            app:mvSingleLine="true"
            app:mvTextColor="@color/greyAdd"
            app:mvTextSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noticeTextView"
            style="@style/TextView.Small"
            android:layout_height="48dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="更多..." />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTextView"
        style="@style/TextView.Normal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subTitleTextView"
        style="@style/TextView.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/greySub"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home1ImageView"
        style="@style/ImageView.Main"
        android:layout_height="120dp"
        android:visibility="visible" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home2LinearLayout"
        style="@style/Layout.Wrap"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home21ImageView"
            style="@style/ImageView.Main"
            android:layout_weight="1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Layout.Main"
            android:layout_marginStart="1px"
            android:layout_marginLeft="1px"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home22ImageView"
                style="@style/ImageView.Main"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home23ImageView"
                style="@style/ImageView.Main"
                android:layout_marginTop="1px"
                android:layout_marginBottom="1px"
                android:layout_weight="1" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home4LinearLayout"
        style="@style/Layout.Wrap"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Layout.Main"
            android:layout_marginEnd="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home42ImageView"
                style="@style/ImageView.Main"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home43ImageView"
                style="@style/ImageView.Main"
                android:layout_marginTop="1px"
                android:layout_marginBottom="1px"
                android:layout_weight="1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home41ImageView"
            style="@style/ImageView.Main"
            android:layout_weight="1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home5LinearLayout"
        style="@style/Layout.Wrap"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home51ImageView"
            style="@style/ImageView.Main"
            android:layout_weight="1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/Layout.Main"
            android:layout_marginStart="1px"
            android:layout_marginLeft="1px"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home52ImageView"
                style="@style/ImageView.Main"
                android:layout_weight="1" />

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Layout.Main"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home53ImageView"
                    style="@style/ImageView.Main"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home54ImageView"
                    style="@style/ImageView.Main"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px"
                    android:layout_weight="1" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainRecyclerView"
        style="@style/Layout.Main"
        android:visibility="gone" />
</androidx.appcompat.widget.LinearLayoutCompat>